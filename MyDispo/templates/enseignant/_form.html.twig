<div class="card">

  <div class="card-body">
    <p class="card-text">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-3"></div>
          <div class="col-md-6">
            <div class="card">
              <h5 class="card-header">
                <center>
                  <td>
                    <h4>
                      <i class="far fa-user"></i>
                      {{ enseignant.nom }}
                      {{ enseignant.prenom }}
                    </h4>
                  </td>
                </center>
              </h5>
              <div class="card-body">
                <p class="card-text">
                  {{ form_start(form) }}
                  {{ form_row(form.nom) }}
                  {{ form_row(form.prenom) }}
                  {{ form_row(form.mail) }}
                  {{ form_row(form.statut) }}
                  {{ form_row(form.enSommeil) }}
                  {{ form_row(form.token) }}
