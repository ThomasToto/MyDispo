<!DOCTYPE html>
<html lang="fr">
  <html>
    <head>
      <meta charset="UTF-8">
      <title>
        {% block title %}Titre onglet{% endblock %}
      </title>

      {% block stylesheets %}
      <link rel="stylesheet" href="{{asset('bootstrap/css/bootstrap.css')}}" crossorigin="anonymous">  <!-- Style Bootstrap en local -->
      <link href="{{ asset('css/fullcalendarstyle.css') }}" rel="stylesheet"/>
      <link href="{{ asset('fullcalendar/packages/core/main.css') }}" rel='stylesheet'/>
      <link href="{{ asset('fullcalendar/packages/timegrid/main.css') }}" rel='stylesheet'/>
      <link href="{{ asset('fullcalendar/packages/daygrid/main.css') }}" rel='stylesheet'/>
      <link href="{{ asset('fullcalendar/packages/bootstrap/main.css') }}" rel='stylesheet'/>

      <link href='https://use.fontawesome.com/releases/v5.0.6/css/all.css' rel='stylesheet'>
      {% endblock %}

      {% block sideNav %}{% endblock %}


    </head>
    <body>
      <div class="container-fluid">

        <!-- EntÃªte du formulaire  -->
        <div class="row">
          <div class="col-md-12">
            {% block enTete %}

            {% endblock %}
          </div>
        </div>


  <!-- Contenu du formulaire  -->
  <div id="main">


  <ul class="nav nav-tabs">
        <!-- add data-toggle attribute to the anchors -->
        <li role="presentation"><a class="nav-link active" data-toggle="tab" href="#contraintesHebdo" role="tab" aria-controls="contraintesHebdo" aria-selected="true" >Contraintes hebdomadaires</a></li>
        <li role="presentation"><a class="nav-link" data-toggle="tab" href="#contraintesPonct" role="tab" aria-controls="contraintesPonct" aria-selected="false" >Contraintes ponctuelles</a></li>
  </ul>

  <div class="tab-content">

  <!--Saisie des contraintes hebdomadaires  -->
  <div id="contraintesHebdo" class="tab-pane fade show active" aria-labelledby="contraintesHebdo-tab">
    <div class="row">
      <div class="col-md-3">
        {% block ZoneGaucheSaisiesContraintesHebdos %}{% endblock %}
      </div>
      <div class="col-md-9">
        {% block ZoneDroiteSaisiesContraintesHebdos %}{% endblock %}
      </div>
    </div>
  </div>


  <!--Saisie des contraintes ponctuelles  -->
  <div id="contraintesPonct" class="tab-pane fade" aria-labelledby="contraintesPonct-tab">
    <div class="row">
      <div class="col-md-2">
        {% block ZoneGaucheSaisiesContraintesPonctuelles %}{% endblock %}
      </div>
      <div class="col-md-8">
        {% block ZoneCentreSaisiesContraintesPonctuelles %}{% endblock %}
      </div>
      <div class="col-md-2">
        {% block ZoneDroiteSaisiesContraintesPonctuelles %}{% endblock %}
      </div>
    </div>
  </div>

  </div>

  <center>
  <button class="btn-primary" id="submit">
    <i class="far fa-save"></i>{{ button_label|default(' Enregistrer ') }}</button>
  </center>



</div>
</div>









    {% block javascripts %}
      <script src="https://code.jquery.com/jquery-3.4.1.min.js" crossorigin="anonymous"></script>
      <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/js/all.min.js" crossorigin="anonymous"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.min.js"></script>

      <script src="{{ asset('fullcalendar/packages/core/main.js')}}"></script>
      <script src="{{ asset('fullcalendar/packages/daygrid/main.js')}}"></script>
      <script src="{{ asset('fullcalendar/packages/timegrid/main.js')}}"></script>
      <script src="{{ asset('fullcalendar/packages/core/locales/fr.js')}}"></script>
      <script src="{{ asset('fullcalendar/packages/interaction/main.js')}}"></script>
      <script src="{{ asset('fullcalendar/packages/bootstrap/main.js')}}"></script>*
      <script src="{{asset('monJs/fullcalendar/hebdo.js')}}"></script>
      <script src="{{asset('monJs/fullcalendar/mensuel.js')}}"></script>
      <script src="https://unpkg.com/tippy.js@6/dist/tippy-bundle.umd.js"></script>
      <script src="https://momentjs.com/downloads/moment.js"></script>


    {% endblock %}
  </body>
</html>
