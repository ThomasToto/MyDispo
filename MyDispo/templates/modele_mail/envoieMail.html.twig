{% extends 'base.html.twig' %}

{% block title %}Envoi Mail{% endblock %}

{% block body %}

  <div class="card">
    <div class="card-body">
      <p class="card-text">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
              <div class="card">
                <h5 class="card-header">
                  <center>
                    <td>
                      <h4>
                        <i class="far fa-envelope"></i>
                        Envoi mail</h4>
                    </td>
                  </center>
                </h5>
                <div class="card-body">
                  <p class="card-text">
                    {{ form_start(form) }}
                    {{ form_row(form.nom) }}
                    <h6>Envoyer un mail à tous les enseignants respectant les critères suivants:</h6>
                  <br />


          {{ form_label(form.nomCourt) }}
          {{ form_widget(form.nomCourt) }}
          {{ form_help(form.nomCourt) }}
        <br />
          {{ form_row(form.statut) }}
          {{ form_row(form.saisieFaite) }}
          {{ form_row(form.mailRelanceRecu) }}

        </p>
      </div>
      <div class="card-footer">
        <center>
          <button class="btn-primary">
            <i class="fas fa-pencil-alt"></i>{{ button_label|default(' Envoyer ') }}</button>
        </center>
        {{ form_end(form) }}
      </div>
    </div>
  </div>
</div>
</div>
</p>
</div>
</div>


<style></style>

{% endblock %}
